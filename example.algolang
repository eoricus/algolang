АЛГ ФАКТОРИАЛ
	ДАНО
		ЦЕЛ n
	НАДО
		ЦЕЛ
НАЧ
	ЕСЛИ <n <= 1> ТО
		ВОЗВРАТ 1
	ИНАЧЕ
		ЦЕЛ арг := {n - 1}
		ЦЕЛ рез := ФАКТОРИАЛ(арг)
		ВОЗВРАТ {n * рез}
КОН


АЛГ ТЕСТ
	НАДО
		ЦЕЛ
НАЧ
	ВОЗВРАТ {10*20-30+40^4}
КОН


НАЧАЛО
	ВЫВОД (ТЕСТ())

	ЦЕЛ рез := ФАКТОРИАЛ(6)

	ЦЕЛ идкс := 5
	ВЫВОД (идкс)
	ДЛЯ идкс ПО рез ШАГ 100
		ВЫВОД (идкс)
	КОН

	ПОКА <рез == 720>
		ВЫВОД ("Правильный вывод программы")
		рез := 0

	ВЫПОЛНЯТЬ
		ВЫВОД ("Выведет в единственный раз")
	ПОКА <рез == 720>
КОН